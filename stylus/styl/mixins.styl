// Interpolation in styl(e)us
vendor(property, arg)
	{property} arg
	-webkit-{property} arg
	-moz-{property} arg

transition(args)
	vendor('transition', args)
	
// This is a mixin (default values, rad!)
border-radius(radius = 5px)
	vendor('border-radius', radius)
	//-webkit-border-radius radius
	//border-radius radius	

// Conditionals are cool (is object in inventory?, color background)
test(var)
	padding-right unit(var, 'px')
	if var > 10
		font 28px
	else
		font 14px

